{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias",
    "lint": "eslint src --ext .ts",
    "start:dev": "nodemon -L src/index.ts",
    "dev": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:apply": "prisma migrate dev --schema src/database/prisma/schema.prisma",
    "prisma:migrate:create": "prisma migrate dev --schema src/database/prisma/schema.prisma --create-only",
    "prisma:deploy": "prisma migrate deploy --schema src/database/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "src/database/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "@prisma/client": "^6.7.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "prisma": "^6.7.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  }
