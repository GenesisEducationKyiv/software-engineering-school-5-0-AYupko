{
  "name": "subscription-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node dist/main.js",
    "start:dev": "nodemon -L src/index.ts",
    "dev": "tsx src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate:apply": "prisma migrate dev --schema src/database/prisma/schema.prisma",
    "prisma:migrate:create": "prisma migrate dev --schema src/database/prisma/schema.prisma --create-only",
    "prisma:deploy": "prisma migrate deploy --schema src/database/prisma/schema.prisma",
    "test:integration": "jest --selectProjects integration --runInBand --forceExit",
    "test:integration:docker": "docker-compose -f docker-compose.test.yaml up --build --abort-on-container-exit"
  },
  "prisma": {
    "schema": "src/database/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "@prisma/client": "^6.11.1",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-pretty-imports": "^1.3.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}